<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#80FF00">

    <ImageView
        android:id="@+id/imgLogin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login"/>
    <EditText
        android:id="@+id/activity_main_edtLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/email"
        android:hint="Please enter your email address"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        />
    <EditText
        android:id="@+id/activity_main_edtLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableRight="@drawable/password"
        android:hint="Please enter your password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/activity_main_btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:backgroundTint="#FFFF00"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:backgroundTint="#FF0000"
        android:id="@+id/activity_main_btnSignUp"
        />


</LinearLayout>